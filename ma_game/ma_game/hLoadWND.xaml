<Window x:Class="ma_game.hLoadWND"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ma_game"
        mc:Ignorable="d"
        Title="Hero: Load" Height="130" Width="310" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <WrapPanel Margin="0,0,0,4">
        <Label Content="Enter name of hero:" HorizontalAlignment="Left" Margin="8,6,4,0" VerticalAlignment="Top" Width="114"/>
        <ComboBox x:Name="loadName" HorizontalAlignment="Left" Margin="4,8,0,0" VerticalAlignment="Top" Width="155"/>
        <Label Content="Enter password:" HorizontalAlignment="Left" Margin="8,4,24,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="loadPass" HorizontalAlignment="Left" Margin="4,8,0,0" VerticalAlignment="Top" Width="155"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="130,4,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="4,4,0,6" VerticalAlignment="Top" Width="75" Click="Load_Click"/>
    </WrapPanel>
</Window>
